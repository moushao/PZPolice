<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/root_view"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/interval1"
              android:background="?android:attr/selectableItemBackground"
              android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:paddingBottom="@dimen/interval1"
                  android:paddingTop="@dimen/interval1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/interval2"
            android:text="案件编号："
            android:textColor="@color/text_title"
            android:textSize="@dimen/text_size_3"/>

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/interval2"
            android:gravity="right"
            android:text="aa"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_size_3"/>

    </LinearLayout>

    <include layout="@layout/item_line"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:paddingBottom="@dimen/interval1"
                  android:paddingTop="@dimen/interval1"
                  android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/interval2"
            android:text="案件分值："
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_3"
            />


        <TextView
            android:id="@+id/tv_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/interval2"
            android:gravity="right"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_size_3"
            />
    </LinearLayout>

    <include
        layout="@layout/item_line"
        android:visibility="gone"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:paddingBottom="@dimen/interval1"
                  android:paddingTop="@dimen/interval1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/interval2"
            android:text="案件时间："
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_3"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/interval2"
            android:gravity="right"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_3"/>

    </LinearLayout>

    <include layout="@layout/item_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/interval1"
        android:paddingTop="@dimen/interval1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/interval2"
            android:text="案件类型："
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_3"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/interval2"
            android:gravity="right"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_3"/>
    </LinearLayout>

    <include layout="@layout/item_line"/>
</LinearLayout>