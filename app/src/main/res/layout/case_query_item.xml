<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/cardView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    card_view:cardBackgroundColor="@color/content_background"
                                    card_view:cardCornerRadius="10dp"
                                    card_view:cardElevation="5dp"
                                    card_view:cardPreventCornerOverlap="true"
                                    card_view:cardUseCompatPadding="true"
                                    card_view:contentPadding="10dp">

    <LinearLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tv_title"
            android:textColor="@color/text_title"
            android:textSize="@dimen/text_size_3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/item_line"/>


        <TextView
            android:id="@+id/tv_case_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tv_case_id"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_2"/>

        <TextView
            android:id="@+id/tv_case_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tv_case_link"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_2"/>

        <TextView
            android:id="@+id/tv_case_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tv_case_address"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_2"/>

        <TextView
            android:id="@+id/tv_case_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tv_case_time"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_2"/>
    </LinearLayout>
</android.support.v7.widget.CardView>