<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/root_view"
    android:orientation="vertical"
    android:paddingTop="@dimen/interval2">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/screen_background"
        android:paddingBottom="@dimen/interval2"
        android:paddingTop="@dimen/interval2">


        <TextView
            android:id="@+id/family_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/interval1"
            android:text="@string/body_situation"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_3"/>

        <TextView
            android:id="@+id/body_situation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/interval2"
            android:layout_weight="1"
            android:gravity="right"
            android:text="一般"
            android:textSize="@dimen/text_size_3"/>

    </LinearLayout>

    <include layout="@layout/item_line"/>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/interval2"
        android:paddingTop="@dimen/interval2">

        <TextView
            android:id="@+id/body_situation_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/interval1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_3"/>

    </LinearLayout>

    <include layout="@layout/item_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/screen_background"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/interval2"
        android:paddingTop="@dimen/interval2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/interval1"
            android:text="@string/family_situation"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_3"/>

    </LinearLayout>

    <include layout="@layout/item_line"/>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/interval2"
        android:paddingTop="@dimen/interval2">

        <TextView
            android:id="@+id/family_situation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/interval1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_3"/>

    </LinearLayout>

</LinearLayout>